{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"checkJs": false,
		"declaration": false,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"jsxImportSource": "jsx-dom",
		"lib": ["DOM.Iterable", "dom", "es2021"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "./lib",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"removeComments": true
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
